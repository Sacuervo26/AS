<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Selección de elementos con verificación de tipo
        const mobileMenuBtn = document.getElementById('mobile-menu-btn') as HTMLButtonElement | null;
        const mobileMenu = document.getElementById('mobile-menu') as HTMLUListElement | null;
        
        // Verificación exhaustiva de elementos
        if (!mobileMenuBtn || !mobileMenu) {
            console.error('Elementos del menú no encontrados');
            return;
        }
    
        // Función para alternar el menú con manejo de tipos
        function toggleMenu(): void {
            const currentState = mobileMenuBtn?.getAttribute('aria-expanded');
            const isExpanded = currentState === 'true';
            
            if (mobileMenuBtn) {
                mobileMenuBtn.setAttribute('aria-expanded', (!isExpanded).toString());
            }
            
            if (mobileMenu) {
                if (isExpanded) {
                    mobileMenu.classList.add('hidden');
                    mobileMenu.classList.remove('block');
                } else {
                    mobileMenu.classList.remove('hidden');
                    mobileMenu.classList.add('block');
                }
            }
        }
    
        // Manejador de eventos para el botón con verificación de tipos
        mobileMenuBtn.addEventListener('click', function(e: MouseEvent) {
            e.preventDefault();
            e.stopPropagation();
            toggleMenu();
        });
    
        // Manejador para cerrar al hacer clic fuera, con verificación de tipos
        document.addEventListener('click', function(e: MouseEvent) {
            const target = e.target as Node | null;
            
            if (!target) return;
            if (!mobileMenu || !mobileMenuBtn) return;
            
            const clickedInsideMenu = mobileMenu.contains(target);
            const clickedOnButton = mobileMenuBtn.contains(target);
            
            if (!clickedInsideMenu && !clickedOnButton) {
                mobileMenuBtn.setAttribute('aria-expanded', 'false');
                mobileMenu.classList.add('hidden');
                mobileMenu.classList.remove('block');
            }
        });
    
        // Manejador para enlaces del menú con verificación de tipos
        const menuLinks = mobileMenu.querySelectorAll('a');
        menuLinks.forEach(link => {
            link.addEventListener('click', function() {
                if (mobileMenuBtn) mobileMenuBtn.setAttribute('aria-expanded', 'false');
                if (mobileMenu) {
                    mobileMenu.classList.add('hidden');
                    mobileMenu.classList.remove('block');
                }
            });
        });
    });
</script>